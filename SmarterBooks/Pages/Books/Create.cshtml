@page
@model SmarterBooks.Pages.Books.CreateModel
@{
	ViewData["Title"] = "Create";
} 

<h2 class="text-primary text-center">Create New Book</h2>		   

<div class="border-2 border container" style="padding: 30px;">
	<form method="post">	
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		
		<div class="mb-3 row">
			<div class="col-3">					
				<label asp-for="Book.Name"></label>
			</div>
			<div class="col-6">		
				<input asp-for="Book.Name" class="form-control" />
			</div> 	
												
			<span class="text-danger" asp-validation-for="Book.Name"></span>
		</div>	
		
		<div class="mb-3 row">
			<div class="col-3">
				<label asp-for="Book.Author"></label>
			</div>
			<div class="col-6">		
				<input asp-for="Book.Author" class="form-control" />
			</div> 
	
			<span class="text-danger" asp-validation-for="Book.Author"></span>
		</div>
		
		<div class="mb-3 row">
			<div class="col-3">
				<label asp-for="Book.ISBN"></label>
			</div>
			<div class="col-6">		
				<input asp-for="Book.ISBN" class="form-control" />
			</div> 
	
			<span class="text-danger" asp-validation-for="Book.ISBN"></span>
		</div>
		
		<div class="mb-3 row">
			<div class="col-3 offset-3">
				<input type="submit" value="Add" class="btn btn-success form-control" />
			</div>	  
			<div class="col-3">
				<a asp-page="/Index" class="btn btn-warning form-control">Back</a>
			</div>
		</div>
	</form>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}